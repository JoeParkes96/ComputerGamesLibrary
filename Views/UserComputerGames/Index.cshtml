@model ComputerGamesLibrary.Models.UserComputerGamesViewModel

@{
    ViewBag.Title = "Computer Games Library";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New", "Add")
</p>

<form asp-controller="UserComputerGames" asp-action="Index" method="get">
    <div class="form-actions no-color">
        <div>
            <span>Genre</span>
            @Html.DropDownListFor(model => model.GameGenre, Model.Genres, "All")
        </div>
        <div>
            <span>Year</span>
            @Html.DropDownListFor(model => model.SelectedYear, Model.Years, "All")
        </div>
        <div>
            <span>Title</span>
            @Html.EditorFor(model => model.SearchString, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SearchString, "", new { @class = "text-danger" })
        </div>
        <div>
            <span>Price Range</span>
            <span>From</span>
            @Html.EditorFor(model => model.FromPrice, new { htmlAttributes = new { @class = "form-control" } })
            <span>To</span>
            @Html.EditorFor(model => model.ToPrice, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <input type="submit" value="Filter" />
        @Html.ActionLink("Reset", "Index")
        
    </div>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Games[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games[0].Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games[0].YearPublished)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Games[0].Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Games) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearPublished)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Update", "Update", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
